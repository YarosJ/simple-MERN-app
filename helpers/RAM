const debugRAM = require('debug')('ram');

/**
 * Outputs a RAM using
 * @param file
 * @returns {number}
 */

export default (file) =>
  setInterval(function () {
    const used = process.memoryUsage();
    for (let key in used) {
      debugRAM(file, `${key} ${Math.round(used[key] / 1024 / 1024 * 100) / 100} MB`);
    }
  }, 2000);
